<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pin.pinwine"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/app"
        android:label="@string/app_name" >
        <activity
            android:name="com.pin.pinwine.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pin.pinwine.activity.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.pin.pinwine.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.pin.pinwine.activity.WineInfoActivity"
            android:label="@string/title_activity_pine_info"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.pin.pinwine.activity.WineDetailActivity"
            android:label="@string/title_activity_pine_detail"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>