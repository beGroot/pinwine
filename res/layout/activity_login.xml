<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentTop="true"
        android:background="@color/common_top_bar_blue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/title_login"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_about"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/btn_list_item_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_feedback"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/btn_list_item_bg" >

        <Button 
            android:id="@+id/btn_weibo_login"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_weibo"
            android:text="微博"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"/>
        
        <Button 
            android:id="@+id/btn_weixin_login"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_weixin"
            android:text="微信"
            android:textColor="#FFFFFF"
            android:layout_below="@id/btn_weibo_login"
            android:layout_centerHorizontal="true"/>
        
        <Button 
            android:id="@+id/btn_qq_login"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_qq"
            android:text="QQ"
            android:textColor="#FFFFFF"
            android:layout_below="@id/btn_weixin_login"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    
	<RelativeLayout
        android:id="@+id/re_check_upgrade"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_list_item_bg"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/phone_login_register"
            android:textColor="#353535"
            android:textSize="16sp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>
